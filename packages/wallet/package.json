{
  "name": "@layer2/wallet",
  "version": "0.0.41",
  "main": "dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cryptoeconomicslab/chamber-packages.git"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --build ./tsconfig.json",
    "build:dev": "tsc",
    "build:ci": "yarn run build",
    "format": "prettier --write \"src/**/*.ts\"",
    "mock:run": "./chrome.sh &",
    "mock:kill": "kill $(pgrep -f 'Chrome --headless --remote-debugging-port=9222')",
    "test": "yarn build:dev && yarn mock:kill || true && yarn mock:run && mocha --exit -r ts-node/register 'test/**/*.ts'",
    "pretest:ci": "tsc --build ./tsconfig-ci.json",
    "test:ci": "nyc npm t",
    "docs": "typedoc --out ../../docs/wallet ./src"
  },
  "dependencies": {
    "@layer2/core": "^0.0.41",
    "@layer2/events-watcher": "^0.0.41",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/mocha": "^5.2.5",
    "@types/mqtt": "^2.5.0",
    "@types/node-fetch": "^2.1.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^3.0.0",
    "chrome-remote-interface": "^0.27.1",
    "dotenv": "^7.0.0",
    "es6-promise": "^4.2.6",
    "ethers": "^4.0.27",
    "fake-indexeddb": "^2.1.0",
    "isomorphic-fetch": "2.2.1",
    "istanbul": "^0.4.5",
    "istanbul-coveralls": "^1.0.3",
    "js-logger": "^1.6.0",
    "localStorage": "^1.0.4",
    "mqtt": "^2.18.8",
    "node-fetch": "^2.3.0",
    "remap-istanbul": "^0.13.0",
    "ts-node": "^7.0.1",
    "tslib": "^1.9.3",
    "typescript": "^3.2.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^6.0.2",
    "nyc": "^14.0.0",
    "typedoc": "^0.14.2"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": ["src/*.d.ts"],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json"
    ],
    "sourceMap":true,
    "all": true
  }
}
